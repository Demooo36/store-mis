// prisma/schema.prisma
// Define your database models

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Stores all system user accounts including Admins, Cashiers, and Customers.
model User {
  userId    String     @id @default(cuid())
  username  String     @unique
  email     String     @unique
  password  String
  salt      String
  role      Roles
  status    UserStatus
  createdAt DateTime   @default(now())
  lastLogin DateTime

  userQRs      UserQR[]
  loyaltyCards loyaltyCard[]
  rewardClaims rewardClaims[]
  cashier      sales[]
  activityLogs ActivityLog[]
  systemFeaturesUpdated SystemFeature[]

}

// Provides QR-based identification for customers to enable fast lookup during loyalty transactions.
model UserQR {
  qrId      String   @id @default(cuid())
  userId    String   @unique
  token     String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // FK Decleration
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

// Represents the physical or logical branches of the business where loyalty points, sales, and inventory activities occur.
model Store {
  storeId   String   @id @default(cuid())
  name      String   @unique
  address   String
  timezone  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//Defines the loyalty tier structure of the business.
model LoyaltyTiers {
  tierId         String @id @default(cuid())
  name           String @unique
  requiredPoints Int
  benefitsJson   Json?
}

model loyaltyCard {
  loyaltyAccountId String   @id @default(cuid())
  userId           String
  tierId           String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  expirationDate   DateTime

  // FK Decleration
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  pointsLedgers pointsLedger[]
}

model pointsLedger {
  pointsLedgerId   String     @id @default(cuid())
  userId           String
  storeId          Int
  loyaltyAccountId String
  sourceType       SourceType
  sourceId         String
  pointsDelta      Int
  details          Json?
  createdBy        DateTime   @default(now())
  createdAt        DateTime   @default(now())

  // FK Decleration
  loyaltyCard loyaltyCard @relation(fields: [loyaltyAccountId], references: [loyaltyAccountId], onDelete: Cascade)
}

model campaigns {
  campaignId     String         @id @default(cuid())
  name           String
  description    String?
  status         CampaignStatus
  startAt        DateTime
  endAt          DateTime
  pointsRequired Int
  rewardType     String
  rewardPayload  Json?
  expiredInDats  Int?
  createdBy      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  rewardClaims         rewardClaims[]
  campaignStampLedgers campaignStampLedger[]
}

model rewardClaims {
  claimId      String       @id @default(cuid())
  campaignId   String
  userId       String
  status       RewardStatus
  issuedAt     DateTime     @default(now())
  expiresAt    DateTime
  usedAt       DateTime
  usedIn       String
  usedInSaleId String
  metadata     Json

  // FK Decleration
  user      User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  campaigns campaigns @relation(fields: [campaignId], references: [campaignId], onDelete: Cascade)
}

model campaignStampLedger {
  stampId     String   @id @default(cuid())
  userId      String
  campaignId  String
  stampsDelta Int
  claimId     String
  createdAt   DateTime @default(now())

  // FK Decleration
  campaigns campaigns @relation(fields: [campaignId], references: [campaignId], onDelete: Cascade)
}

model products {
  productId String   @id @default(cuid())
  name      String
  price     Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

//Stores completed sales and refunds.
model sales {
  saleId        String   @id @default(cuid())
  cashierId     String // References User.userId
  storeId       String
  tierId        String
  saleType      SaleType // In Store or Online
  currency      String
  total         Float
  discountTotal Float
  subTotal      Float
  totalAmount   Float
  notes         String?
  createdAt     DateTime @default(now())

  // FK Decleration
  cashier   User        @relation(fields: [cashierId], references: [userId], onDelete: Cascade)
  saleItems SaleItems[]
}

model SaleItems {
  saleItemId    String   @id @default(cuid())
  saleId        String
  productId     String?
  name_snapshot String
  qty           Int
  unitPrice     Float
  totalPrice    Float
  createdAt     DateTime @default(now())

  //FK Decleration
  sales sales @relation(fields: [saleId], references: [saleId], onDelete: Cascade)
}

model SaleDiscount {
  saleDiscountId String       @id @default(cuid())
  saleId         String
  discountType   DiscountType
  amount         Float
  claimId        String? //idk
  notes          String
}

model PaymentRecords {
  paymentId     String        @id @default(cuid())
  saleId        String
  paymentMethod PaymentMethod
  amount        Float
}

model Product {
  productId        String   @id @default(cuid())
  name             String
  unit             String
  lowStockTreshold Int
  createdAt        DateTime @default(now())
}

model ProductStock {
  storeId   String @id @default(cuid())
  ProductId String
  onHand    Int
}

model ProductMove {
  moveId    String   @id @default(cuid())
  storeId   String
  moveType  MoveType
  qtyDelta  Int
  saleId    String?
  productId String
}

model ActivityLog {
  activityId String         @id @default(cuid())
  actorId    String
  actorType  ActorType
  action     ActivityAction
  // entityType EntityType
  // entityId  String
  details    Json
  createdAt  DateTime       @default(now())

  //FK Declaration
  actor User @relation(fields: [actorId], references: [userId], onDelete: Cascade)
}

model RefundReasons {
  refundReasonId String   @id @default(cuid())
  label          String
  createdAt      DateTime @default(now())
}

model superAdmins {
  superAdminId String   @id @default(cuid())
  fullName     String
  email        String   @unique
  password     String
  isActive     Boolean  @default(true)
  lastLoginAt  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SystemFeature {

  featureKey  String   @id @db.VarChar(64)
  enabled     Boolean  @default(false)
  updatedAt   DateTime @default(now()) @updatedAt
  updatedBy   String?  @db.Uuid
  updatedBy   User?    @relation(fields: [updated_by], references: [user_id], onDelete: SetNull)

  @@map("system_features")
}



enum ActivityAction {
  sales
  refund
  system
}

enum ActorType {
  cashier
  customer
  admin
  superadmin
}

enum MoveType {
  In
  Out
}

enum PaymentMethod {
  Cash
  Gcash
  Maya
  Debit
  Credit
}

enum DiscountType {
  Senior
  Student
}

enum Roles {
  Admin
  Cashier
  Customer
}

enum UserStatus {
  Pending
  Active
  Rejected
  Disabled
}

enum SourceType {
  manualPurchase
  redeem
  void
  adjust
}

enum CampaignStatus {
  draft
  Active
  paused
  ended
}

enum RewardStatus {
  pending
  used
  expired
  voided
}

enum SaleType {
  inStore
  online
}
